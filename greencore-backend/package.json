{
  "name": "greencore-aurea-backend",
  "version": "5.2.0",
  "description": "Green Core AUREA v5.2 - Enterprise Energy Management API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "create-admin": "node scripts/create-admin.js",
    "test:db": "node scripts/test-connection.js",
    "test": "NODE_ENV=test jest -c jest.config.cjs --coverage --verbose",
    "test:watch": "NODE_ENV=test jest -c jest.config.cjs --watch",
    "test:unit": "NODE_ENV=test jest -c jest.config.cjs tests/",
    "test:health": "NODE_ENV=test jest -c jest.config.cjs tests/health.test.js",
    "test:coverage": "NODE_ENV=test jest -c jest.config.cjs --coverage",
    "test:no-coverage": "NODE_ENV=test jest -c jest.config.cjs --verbose",
    "create-indexes": "node scripts/create-indexes.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "build:check": "node server.js --check || echo OK"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.6.3",
    "helmet": "^7.1.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "nodemailer": "^8.0.1",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.3"
  }
}